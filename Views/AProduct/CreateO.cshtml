@model LAQY.Models.Offer
@using LAQY.Resources
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AMaster.cshtml";
}

<div class="col-md-12 col-sm-12">
    <div class="section-title">
        <h1 class="heading bold">@General.AddOffer</h1>
        <hr>
    </div>
</div>

<div class="container text-center">
    @using (Html.BeginForm("CreateO", "AProduct", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Title <span class="glyphicon glyphicon-pencil"></span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control" required name="title" placeholder="@General.Title">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Price <span class="glyphicon glyphicon-usd"></span></label>
            <div class="col-sm-3">
                <input type="number" class="form-control" required name="price" placeholder="100">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Offer <span class="glyphicon glyphicon-usd"></span></label>
            <div class="col-sm-3">
                <input type="number" class="form-control" required name="dis" placeholder="100">
            </div>
        </div>
        <div class="form-group shadow-textarea">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Details <span class="glyphicon glyphicon-pencil"></span></label>
            <div class="col-sm-3">
                <textarea class="form-control z-depth-1" rows="3" name="details" required placeholder="@General.Details"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Upload <span class="glyphicon glyphicon-picture"></span></label>
            <input type="file" required name="Ufile">
        </div>
        @Html.Hidden("date", DateTime.Now.Date);
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-1">
                <button type="submit" class="btn btn-success">@General.Create <span class="glyphicon glyphicon-save"></span></button>
            </div>
        </div>
    }
</div>
