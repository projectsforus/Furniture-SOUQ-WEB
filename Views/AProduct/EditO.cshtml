@model LAQY.Models.Offer
@using LAQY.Resources
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AMaster.cshtml";
}

<div class="col-md-12 col-sm-12">
    <div class="section-title">
        <h1 class="heading bold">@General.EditODetails</h1>
        <hr>
    </div>
</div>

<div class="container text-center">
    @using (Html.BeginForm("EditO", "AProduct", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.HiddenFor(model => model.id)
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Title <span class="glyphicon glyphicon-pencil"></span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control" required name="title" placeholder="@General.Title" value="@Model.title">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Price <span class="glyphicon glyphicon-usd"></span></label>
            <div class="col-sm-3">
                <input type="number" class="form-control" required name="price" placeholder="100" value="@Model.price">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Offer <span class="glyphicon glyphicon-usd"></span></label>
            <div class="col-sm-3">
                <input type="number" class="form-control" required name="dis" placeholder="100" value="@Model.dis">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label class="col-sm-2 control-label">@General.Details <span class="glyphicon glyphicon-pencil"></span></label>
            <div class="col-sm-3">
                <input type="text" class="form-control" required name="details" placeholder="@General.Details" value="@Model.details">
            </div>
        </div>
        @Html.HiddenFor(model => model.date);
        @Html.HiddenFor(model => model.img);
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-1">
                <button type="submit" class="btn btn-warning">@General.Update <span class="glyphicon glyphicon-edit"></span></button>
            </div>
        </div>
    }
</div>