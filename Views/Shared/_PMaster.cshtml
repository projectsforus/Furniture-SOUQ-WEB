@using LAQY.Resources
@using System.Globalization;
@using System.Threading;
@{
    CultureInfo currentCulture = Thread.CurrentThread.CurrentUICulture;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <title>@ViewBag.Title - LAQY</title>
    <link rel="icon" href="~/Image/a696f0fe-05e0-4be9-bab5-f6b027d2bebe.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="Sell ,Buy,Laqy">
    <meta name="description" content="LAQY - Buy and Sell for free anywhere in World with LAQY online Classifieds">

    @{
        if (General.dir == "rtl")
        {
            <link href="~/Content/bootstrap-arabic.min.css" rel="stylesheet" />
        }
        else
        {
            <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        }
    }
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,500' rel='stylesheet' type='text/css'>
</head>
<body data-spy="scroll" data-target=".navbar-collapse" data-offset="50">
    <!-- navigation section -->
    <section class="navbar navbar-fixed-top custom-navbar" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                @Html.ActionLink(General.LAQY, "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li>@Html.ActionLink(General.Products, "Index", "Products", null, new { @class = "smoothScroll" })</li>
                    <li>@Html.ActionLink(General.Offers, "IndexO", "Products", null, new { @class = "smoothScroll" })</li>
                    <li>@Html.ActionLink(General.AboutUs, "AboutUs", "Products", null, new { @class = "smoothScroll" })</li>
                    <li>@Html.ActionLink(General.ContactUs, "ContactUs", "Products", null, new { @class = "smoothScroll" })</li>
                    <li>@Html.ActionLink(General.FeedBack, "FeedBack", "Products", null, new { @class = "smoothScroll" })</li>
                    <li>@Html.ActionLink(General.Location, "Location", "Products", null, new { @class = "smoothScroll" })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Uid"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle smoothScroll" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@Session["Uname"].ToString()</a>
                            <ul class="dropdown-menu" id="mn">
                                <li>@Html.ActionLink(General.Cart, "Cart", "Users", null, new { @class = "smoothScroll " })</li>
                                <li>@Html.ActionLink(General.Profile, "UProfile", "Users", null, new { @class = "dropdown-item " })</li>
                                <li>@Html.ActionLink(General.LogOut, "LogOut", "Users", null, new { @class = "dropdown-item " })</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink(General.lang, "Lang", "Handler", new { user = "user", lang = General.langtex }, new { @class = "smoothScroll" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink(General.Sign, "Sign", "Users", null, new { @class = "smoothScroll" })</li>
                        <li>@Html.ActionLink(@General.Register, "Sign", "Users", null, new { @class = "smoothScroll" })</li>
                        <li>@Html.ActionLink(General.lang, "Lang", "Handler", new { user = "anan", lang = General.langtex }, new { @class = "smoothScroll" })</li>
                    }
                </ul>
            </div>
        </div>
    </section>
    <!-- team section -->
    <section id="team">
        <div class="container">
            @RenderBody()
        </div>
    </section>
    <hr />
    <!-- footer section -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <p>Copyright &copy; Developers 2019</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/jquery.js"></script>
    @{
        if (General.dir == "rtl")
        {
            <script src="~/Scripts/bootstrap-arabic.min.js"></script>
        }
        else
        {
            <script src="~/Scripts/bootstrap.min.js"></script>
        }
    }
    <script src="~/Scripts/toastr.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
